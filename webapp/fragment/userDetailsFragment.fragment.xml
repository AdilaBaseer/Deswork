<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f">
	<Popover
		title=""
		placement="Bottom"
		contentWidth="20rem"
		initialFocus="btnLogout"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer">
		<footer>
			<OverflowToolbar >
				<ToolbarSpacer />
				<!-- <Button
					
					text=""
					icon="sap-icon://user-settings"
					tooltip="User Settings"
					press="OnUserSettingPress" /> -->
					<Button
					
					text="Log Out "
					press="performLogout" />
			</OverflowToolbar>
		</footer>
		
		<VBox  alignItems="Center" class="sapUiSmallMargin">
			<f:Avatar src="{/profilePhoto}" displaySize="L" backgroundColor="Random" class="sapUiSmallMarginTopBottom">
				<f:detailBox>
					<LightBox >
						<LightBoxItem 
								imageSrc="{/profilePhoto}"
								alt="{/firstName} {/lastname}"
								title="{/firstName} {/lastname}"
								subtitle="{/country}">
						</LightBoxItem>
					</LightBox>
				</f:detailBox>
			</f:Avatar>
			<Title  text="{/firstName} {/lastName} ({/designation})" class="sapUiTinyMarginBottom" />
			<Text  text="{/email}" class="sapUiTinyMarginBottom" />
			<Text text="{/country}" class="sapUiTinyMarginBottom" visible="{= !!${/country}}" />
			<!-- <Text id="_IDGenTextf3" text="{organisation>/name}" visible="{= !!${/organisation/name}}" /> -->
		</VBox>
		
	</Popover>
</core:FragmentDefinition>