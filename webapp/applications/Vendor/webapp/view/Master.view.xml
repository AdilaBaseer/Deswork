<mvc:View displayBlock="true" controllerName="vaspp.Vendor.controller.Master" height="100%"
	  xmlns="sap.m"
	  xmlns:f="sap.f"
	  xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId"
				   toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
				<f:heading>
					<Title id="_IDGenTitle1" text="Vendor Details"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<List
				id="productsTable"
				mode="SingleSelectMaster"
				headerText="Leave Application List"
				itemPress="onListItemPress"
				items="{mvendor>/VendorCollection/}"
				>
				<headerToolbar>
		

					<OverflowToolbar id="_IDGenOverflowToolbar1">
					
						<ToolbarSpacer id="_IDGenToolbarSpacer1"/>
						<SearchField id="_IDGenSearchField1" search="onSearch" placeholder="Search by vendor name" class="sapUiSmallMarginEnd"  width="17.5rem"/>
							<OverflowToolbarButton id="_IDGenOverflowToolbarButton3" icon="sap-icon://add" type="Transparent" press="onAddNewVendor"/>
						<OverflowToolbarButton id="_IDGenOverflowToolbarButton2" icon="sap-icon://sort" class="sapUiSmallMarginEnd" type="Transparent" press="onSort"/>
					</OverflowToolbar>
					
				</headerToolbar>
			
					<ObjectListItem id="_IDGenColumnListItem1" title="{mvendor>VendorName}" type="Navigation" >
			<firstStatus >
			<ObjectStatus id="_IDGenObjectStatus1" title="Projects" text="{mvendor>noofproject}"
				 />
		    </firstStatus>
			<ObjectAttribute id="_IDGenObjectAttribute2" title="ID" text="{mvendor>id}" />
			<ObjectAttribute id="_IDGenObjectAttribute1" title="Country" text="{mvendor>country}" />
			<ObjectAttribute id="_IDGenObjectAttribute3" title="E-mail" text="{mvendor>contactEmail}" />
					</ObjectListItem>
			</List>
		</f:content>

		<!-- DynamicPage Footer -->
		
	</f:DynamicPage>
</mvc:View>