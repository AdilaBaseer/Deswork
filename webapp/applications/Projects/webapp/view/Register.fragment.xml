<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout">
	<Dialog id="_IDGenDialog1"  title="PROJECT INFORMATION" draggable="true" resizable="true" afterClose="dialogAfterclose" >
		<content>
			<VBox id="_IDGenVBox1"  class="sapUiTinyMarginBeginEnd">
				<f:SimpleForm id="_IDGenSimpleForm1" >
					<core:Title id="_IDGenTitle1" text="Projects details" />
					<Label id="_IDGenLabel1"  text="Project Name" />
					<Input id="_IDGenInput1"   required="true"/>
					<Label id="_IDGenLabel2"  text="Description" />
					<Input id="_IDGenInput2" required="true"/>
					<Label id="_IDGenLabel3"  text="Type" required="true" />
					<Select id="_IDGenSelect1" forceSelection="false" required="true"   >
						<core:Item id="_IDGenItem1"  key="Internal"  text="Internal"/>
						<core:Item id="_IDGenItem2"  key="External"  text="External"/>
					</Select>
					<Label id="_IDGenLabel4" required="true" text="Start Date" />
					<DatePicker id="_IDGenDatePicker1" valueFormat="yyyy-MM-dd" required="true" change="onStatusStart"/>
					<Label id="_IDGenLabel5" required="true" text="End Date" />
					<DatePicker id="_IDGenDatePicker2"  valueFormat="yyyy-MM-dd" required="true" change="onStatusEnd"/>
					<Label id="_IDGenLabel6"  text="Actual End Date" />
					<DatePicker id="_IDGenDatePicker3"  valueFormat="yyyy-MM-dd" editable="false" />
					<Label id="_IDGenLabel7"  text="Priority" required="true" />
					<Select id="_IDGenSelect2" forceSelection="false" required="true" selectedKey="">
						<core:Item id="_IDGenItem3" key="High" text="High" />
						<core:Item id="_IDGenItem4" key="Critical"  text="Critical" />
						<core:Item id="_IDGenItem5" key="Moderate" text="Moderate" />
						<core:Item id="_IDGenItem6" key="Low"  text="Low"  />
					</Select>
					<Label id="_IDGenLabel8"  text="Status"  visible="false"/>
					<Select id="_IDGenSelect3" forceSelection="false"  selectedKey="" visible="false">
						<core:Item id="_IDGenItem7"  key="New"  text="New"/>
						<core:Item id="_IDGenItem8"  key="In-progress"  text="In-progress"/>
						<core:Item id="_IDGenItem9"  key="Completed"  text="Completed"/>
					</Select>
					<Label id="_IDGenLabel9"  text="Customer Name"  />
					<Select id="_IDGenSelect4" forceSelection="false" selectedKey="" items="{customerInfo>/}">
						<core:Item id="_IDGenItem10"  key="{customerInfo>id}"  text="{customerInfo>attributes/name}"/>
					</Select>
					<Label id="_IDGenLabel10"  text="Estimated Budget" />
					<!-- <Input id="_IDGenInput3" value="{mproject>/estimated_budget}"  required="true"/> -->
					 <FlexBox id="_IDGenFlexBox1" direction="Row" alignItems="Center">
            <Input id="_IDGenInput3" value="" width="80%"/>
            <Select forceSelection="false" id="currency" selectedKey="" width="100%">
                <core:Item id="cori12" key="EUR" text="EUR" />
                <core:Item id="cori13" key="USD" text="USD"/>
                <core:Item id="coru14" key="RUPEES" text="RUPEES"/>
            </Select>
        </FlexBox>
					<Label id="_IDGenLabel11"  text="Actual Budget" />
					<!-- <Input id="_IDGenInput4" value="{mproject>/ac
					tual_budget}"  editable="false"/> -->
						 <FlexBox id="_IDGenFlexBoox1" direction="Row" alignItems="Center">
            <Input id="_IDGenInput4"  editable="false" width="80%"/>
            <Select forceSelection="false" id="currencyA" selectedKey="" width="100%" editable="false">
                <core:Item id="cori12A" key="EUR" text="EUR" />
                <core:Item id="cori13A" key="USD" text="USD"/>
                <core:Item id="coru14a" key="RUPEES" text="RUPEES"/>
            </Select>
        </FlexBox>
				</f:SimpleForm>
			</VBox>
		</content>
		<beginButton>
			<Button id="_IDGenButton1"  text="Save" press="onSaveProject"/>
		</beginButton>
		<endButton>
			<Button id="_IDGenButton2"  text="Cancel" press="closeProjectDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>
