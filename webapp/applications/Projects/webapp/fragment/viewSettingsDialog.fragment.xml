<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ViewSettingsDialog confirm="onConfirmViewSettingsDialog">
		<sortItems >
			<!-- <ViewSettingsItem text="ID" key="id" selected="true"/> -->
			<ViewSettingsItem text="Project Name" key="attributes/name"/>
		</sortItems>
		<filterItems>
			<ViewSettingsFilterItem text="Status" key="attributes/status" multiSelect="false">
				<items>
					<ViewSettingsItem text="In-Progress" key="In-progress"/>
					<ViewSettingsItem text="Completed" key="Completed"/>
					<ViewSettingsItem text="New" key="New"/>
					<ViewSettingsItem  text="Delayed" key="Delayed"/>
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>