<core:FragmentDefinition 
xmlns="sap.m" 
xmlns:core="sap.ui.core" 
xmlns:f="sap.ui.layout.form">
	
	<SelectDialog  title="{i18n>SelectApplications}" confirmButtonText="{i18n>update}" liveChange="handleAppListSearch"
		confirm="handleConfirmAppList" growingThreshold="20" cancel="handleCloseAppList" items="{mapplications>/applications/}"  draggable="true"
		multiSelect="false" rememberSelections="false">
		<StandardListItem title="{mapplications>appId}"
			description="{mapplications>appName}"/>
	</SelectDialog>
	

</core:FragmentDefinition>